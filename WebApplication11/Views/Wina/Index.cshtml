@model IEnumerable<WebApplication11.Models.Wino>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Winiacze</h2>

<p>
    @Html.ActionLink("Create New", "Create")
    
    @using (Html.BeginForm())
    {
        <p> Nazwa: @Html.TextBox("SearchString")   <input type="submit" value="Szukaj" /></p>
    }
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nazwa)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RokProdukcji)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Ocena)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Cena)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Nazwa)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.RokProdukcji)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Ocena)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Cena)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.WinoId }) |
            @Html.ActionLink("Details", "Details", new { id=item.WinoId }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.WinoId })
        </td>
    </tr>
}

</table>
